    <script>
        let allData = [];
        let currentEnv = 'unified';
        let currentFilter = { role: '', status: '', search: '' };

        // Authentication
        document.addEventListener("DOMContentLoaded", async () => {
            const uid = localStorage.getItem('uidd');
            const sessionId = localStorage.getItem('sessionid');

            if (!uid || !sessionId) {
                redirectToLogin();
                return;
            }

            try {
                const response = await fetch('https://10.191.171.12:5443/EISHOME/awthenticationService/authenticatePortal/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${sessionId}`
                    },
                    body: JSON.stringify({ uid })
                });

                if (!response.ok) throw new Error('Auth failed');

                const data = await response.json();
                if (data.status === 302 || data.success === true) {
                    loadData();
                } else {
                    redirectToLogin();
                }
            } catch (error) {
                console.error("Auth error:", error);
                redirectToLogin();
            }
        });

        function redirectToLogin() {
            const currentUrl = encodeURIComponent(window.location.href);
            window.location.href = `https://10.191.171.12:5443/EISHOME/?return_url=${currentUrl}`;
        }

        // Load data
        async function loadData() {
            try {
                const response = await fetch('data/combine.txt');
                const text = await response.text();
                parseData(text);
                updateLastUpdate();
            } catch (error) {
                console.error('Error loading data:', error);
                document.getElementById('tableBody').innerHTML = 
                    '<tr><td colspan="22" class="no-results">Error loading data</td></tr>';
            }
        }

        function parseData(text) {
            const rows = text.trim().split('\n');
            allData = rows.map((row, index) => {
                const cols = row.split(',');
                return {
                    index: index + 1,
                    ip: cols[0] || '',
                    fileSystem: cols[1] || '',
                    lastUpdated: cols[2] || '',
                    upTime: cols[3] || '',
                    role: cols[4] || '',
                    osVersion: cols[5] || '',
                    kernelVersion: cols[6] || '',
                    kernelUpdate: cols[7] || '',
                    aceVersion: cols[8] || '',
                    mqVersion: cols[9] || '',
                    firewall: cols[10] || '',
                    rpmCount: cols[11] || '',
                    dsAgent: cols[12] || '',
                    splunk: cols[13] || '',
                    ragent: cols[14] || '',
                    refId: cols[15] || '',
                    systemTime: cols[16] || '',
                    eisuserExp: cols[17] || '',
                    rootExp: cols[18] || '',
                    socvaExp: cols[19] || '',
                    addmitamExp: cols[20] || '',
                    env: cols[0] ? (cols[0].includes('.pr.') ? 'pr' : 'dr') : 'unified'
                };
            });

            populateFilters();
            renderTable();
            updateStats();
        }

        function populateFilters() {
            const roles = [...new Set(allData.map(d => d.role).filter(r => r))];
            const roleFilter = document.getElementById('roleFilter');
            roleFilter.innerHTML = '<option value="">All Roles</option>';
            roles.forEach(role => {
                roleFilter.innerHTML += `<option value="${role}">${role}</option>`;
            });
        }

        function renderTable() {
            let filteredData = allData;

            // Filter by environment
            if (currentEnv !== 'unified') {
                filteredData = filteredData.filter(d => d.env === currentEnv);
            }

            // Filter by role
            if (currentFilter.role) {
                filteredData = filteredData.filter(d => d.role === currentFilter.role);
            }

            // Filter by status
            if (currentFilter.status) {
                filteredData = filteredData.filter(d => {
                    const status = getStatus(d.dsAgent, d.splunk, d.ragent);
                    return status === currentFilter.status;
                });
            }

            // Search filter
            if (currentFilter.search) {
                const search = currentFilter.search.toLowerCase();
                filteredData = filteredData.filter(d => 
                    Object.values(d).some(val => 
                        String(val).toLowerCase().includes(search)
                    )
                );
            }

            const tbody = document.getElementById('tableBody');
            if (filteredData.length === 0) {
                tbody.innerHTML = '<tr><td colspan="22" class="no-results">No data found</td></tr>';
                return;
            }

            tbody.innerHTML = filteredData.map((row, idx) => {
                const expiryClass = getExpiryClass(row.eisuserExp);
                return `
                    <tr class="${expiryClass}">
                        <td>${idx + 1}</td>
                        <td>${row.ip}</td>
                        <td>${row.fileSystem}</td>
                        <td>${row.lastUpdated}</td>
                        <td>${row.upTime}</td>
                        <td>${row.role}</td>
                        <td>${row.osVersion}</td>
                        <td>${row.kernelVersion}</td>
                        <td>${row.kernelUpdate}</td>
                        <td>${row.aceVersion}</td>
                        <td>${row.mqVersion}</td>
                        <td>${renderStatus(row.firewall)}</td>
                        <td>${row.rpmCount}</td>
                        <td>${renderStatus(row.dsAgent)}</td>
                        <td>${renderStatus(row.splunk)}</td>
                        <td>${renderStatus(row.ragent)}</td>
                        <td>${row.refId}</td>
                        <td>${row.systemTime}</td>
                        <td>${row.eisuserExp}</td>
                        <td>${row.rootExp}</td>
                        <td>${row.socvaExp}</td>
                        <td>${row.addmitamExp}</td>
                    </tr>
                `;
            }).join('');
        }

        function renderStatus(value) {
            if (value === 'DSrunning' || value === 'SPLrunning' || value === 'Ragentrunning' || value === 'active') {
                return '<i class="fas fa-check-circle status-icon status-running"></i>';
            } else if (value === 'DSnotrunning' || value === 'SPLnotrunning' || value === 'Ragentnotrunning' || value === 'inactive') {
                return '<i class="fas fa-times-circle status-icon status-stopped"></i>';
            } else if (value === 'DS_someissue' || value === 'SPL_someissue' || value === 'undefined') {
                return '<i class="fas fa-exclamation-circle status-icon status-issue"></i>';
            }
            return value || '<i class="fas fa-minus-circle status-icon"></i>';
        }

        function getStatus(ds, spl, rag) {
            const values = [ds, spl, rag];
            if (values.some(v => v && v.includes('running'))) return 'running';
            if (values.some(v => v && v.includes('notrunning'))) return 'stopped';
            if (values.some(v => v && v.includes('issue'))) return 'issue';
            return '';
